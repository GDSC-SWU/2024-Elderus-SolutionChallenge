<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpGuardianCompleteActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/iv_complete_guardian_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"/>
        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create guardian account"
            android:textSize="20dp"
            android:textStyle="bold|normal" />


    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray2"
        app:layout_constraintStart_toStartOf="@id/Toolbar"
        app:layout_constraintTop_toBottomOf="@id/Toolbar"/>

    <TextView
        android:id="@+id/tv_guardian_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create account has been completed"
        android:textAppearance="@style/TextAppearance.elderus.Title_Medium"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="@id/Toolbar"
        app:layout_constraintTop_toBottomOf="@id/Toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, \nHoja Bo!"
        android:textAppearance="@style/TextAppearance.elderus.Heading2"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_guardian_complete"
        app:layout_constraintTop_toBottomOf="@id/tv_guardian_complete"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_ward"
        android:layout_width="328dp"
        android:layout_height="64dp"
        android:text="Add a ward"
        android:textAllCaps="false"
        android:background="@drawable/btn_sign_in"
        android:backgroundTint="@color/Secondary"
        android:textAppearance="@style/TextAppearance.elderus.Title_Medium"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="96dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>