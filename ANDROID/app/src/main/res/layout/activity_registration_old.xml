<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrationOldActivity">

    <!-- 피보호자를 등록 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"/>
        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a protected one"
            android:textSize="20dp"
            android:textStyle="bold|normal"
            android:padding="16sp"
            android:paddingLeft="8dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/please_ente_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Please enter\nprotected one's email"
        android:textColor="#1B1B1B"
        app:layout_constraintTop_toBottomOf="@id/Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.elderus.Heading2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@drawable/login_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/please_ente_old"
        android:layout_marginHorizontal="16dp"
        android:padding="0dp"
        android:layout_marginTop="154dp"
        android:id="@+id/old_rec">

        <EditText
            app:layout_constraintTop_toTopOf="@id/old_rec"
            android:id="@+id/old_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="@id/old_rec"
            android:hint="Please enter protected one's email"
            android:textSize="16sp"
            android:layout_marginVertical="16dp"
            android:background="@android:color/transparent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helpbox"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:background="@drawable/helpbox"
        app:layout_constraintTop_toBottomOf="@id/old_rec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="16dp"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/doyouhave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#767676"
            android:textStyle="bold"
            android:text="Do you have more than one protected person?"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/helpbox"
            app:layout_constraintStart_toStartOf="@id/helpbox"/>
        <TextView
            android:id="@+id/youcanreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#767676"
            android:text="You can register one protected person at a time.\nYou can register additional protected person later."
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toTopOf="@id/helpbox"
            app:layout_constraintStart_toStartOf="@id/helpbox"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_regisold"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Continue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpbox"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#DADADA" />

</androidx.constraintlayout.widget.ConstraintLayout>